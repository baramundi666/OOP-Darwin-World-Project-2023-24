<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane minHeight="550.0" maxHeight="1080.0" minWidth="700.0" maxWidth="1920.0" prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: purple; -fx-border-color: black;" fx:controller="agh.oop.presenter.HomePresenter" xmlns:fx="http://javafx.com/fxml" >
   <bottom>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="397.0" BorderPane.alignment="TOP_CENTER">
         <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="400.0">
            <Button  mnemonicParsing="false" prefHeight="25.0" prefWidth="135.0" text="New Configuration" onAction="#newConfiguration">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0"/>
               </HBox.margin>
            </Button>
         </HBox>
         <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="400.0">
            <Button  mnemonicParsing="false" text="Launch Simulation">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0"/>
               </HBox.margin>
            </Button>
         </HBox>
      </HBox>
   </bottom>
   <top>
      <Label prefHeight="58.0" prefWidth="263.0" text="Welcome to DARWIN WORLD SIMULATION" textAlignment="CENTER" textFill="#fdfcfc" BorderPane.alignment="CENTER">
         <font>
            <Font name="Gabriola" size="18.0" />
         </font>
      </Label>
   </top>
   <left>
      <ComboBox prefHeight="25.0" prefWidth="180.0" promptText="Saved configurations" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
      </ComboBox>
   </left>
   <center>
      <ImageView pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" fitWidth="200.0"
                 fitHeight="150.0">
         <BorderPane.margin>
            <Insets right="140.0"/>
         </BorderPane.margin>
         <rotationAxis>
            <Point3D/>
         </rotationAxis>
         <Image url="@fish_home.png"/>
      </ImageView>
   </center>
</BorderPane>
